<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsyuan.inventropy.mapper.UserMapper">
    <insert id="insert">
        insert into tb_user_info(id,name,gender,age,phone,college) values(#{id},#{name},#{gender},#{age},#{phone},#{college})
    </insert>
    <insert id="insertUserAccount">
        insert into tb_user_account(username,password,user_type) values(#{username},#{password},#{userType})
    </insert>
    <update id="changePassword">
        update tb_user_account set password=#{password} where id=#{id}
    </update>
    <delete id="deleteAccount">
        delete from tb_user_account where id=#{id}
    </delete>
    <delete id="deleteUserInfo">
        delete from tb_user_info where id= #{id}
    </delete>
    <select id="selectByUserNameAndPasswordAndUserType" resultType="com.hsyuan.inventropy.pojo.UserDTO">
        select id,username,password,user_type as userType from tb_user_account where username=#{username} and password=#{password} and user_type=#{userType}
    </select>
    <select id="getUserInfo" resultType="com.hsyuan.inventropy.entity.User">
        select * from tb_user_info where id=#{id}
    </select>
    <select id="getAccountForAdmin" resultType="com.hsyuan.inventropy.pojo.UserAccountForAdmin">
        select id,username,name,phone from tb_user_info join tb_user_account using(id) where user_type='user'
    </select>
    <select id="isExitsByUsername" resultType="java.lang.Boolean">
        select exists(select * from tb_user_account where username=#{username})
    </select>
    <select id="getIdByUsername" resultType="java.lang.Integer">
        select id from tb_user_account where username= #{username}
    </select>
</mapper>