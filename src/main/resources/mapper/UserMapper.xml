<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsyuan.inventropy.mapper.UserMapper">
    <select id="selectByUserNameAndPasswordAndUserType" resultType="com.hsyuan.inventropy.pojo.UserDTO">
        select id,username,password,user_type from tb_user_account where username=#{username} and password=#{password} and user_type=#{userType}
    </select>
    <select id="getUserInfo" resultType="com.hsyuan.inventropy.entity.User">
        select * from tb_user_info where id=#{id}
    </select>
</mapper>